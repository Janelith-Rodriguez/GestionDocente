@page "/personas/editar/{Id:int}"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IPersonaServicio PersonaServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Editar Persona</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <EditForm Model="@persona" OnValidSubmit="@Actualizar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <InputText id="nombre" @bind-Value="persona.Nombre" class="form-control" />
            <ValidationMessage For="@(() => persona.Nombre)" />
        </div>

        <div class="form-group">
            <label for="apellido">Apellido:</label>
            <InputText id="apellido" @bind-Value="persona.Apellido" class="form-control" />
            <ValidationMessage For="@(() => persona.Apellido)" />
        </div>

        <div class="form-group">
            <label for="documento">Documento:</label>
            <InputText id="documento" @bind-Value="persona.Documento" class="form-control" />
            <ValidationMessage For="@(() => persona.Documento)" />
        </div>

        <div class="form-group">
            <label for="telefono">Teléfono:</label>
            <InputText id="telefono" @bind-Value="persona.Telefono" class="form-control" />
            <ValidationMessage For="@(() => persona.Telefono)" />
        </div>

        <div class="form-group">
            <label for="domicilio">Domicilio:</label>
            <InputText id="domicilio" @bind-Value="persona.Domicilio" class="form-control" />
            <ValidationMessage For="@(() => persona.Domicilio)" />
        </div>

        <div class="form-group">
            <label for="tipoDocumentoId">Tipo Documento ID:</label>
            <InputNumber id="tipoDocumentoId" @bind-Value="persona.TipoDocumentoId" class="form-control" />
            <ValidationMessage For="@(() => persona.TipoDocumentoId)" />
        </div>

        <div class="form-group form-check">
            <InputCheckbox id="activo" @bind-Value="persona.Activo" class="form-check-input" />
            <label for="activo" class="form-check-label">Activo</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Actualizar</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private Persona persona = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnParametersSetAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        StateHasChanged();

        var respuesta = await PersonaServicio.GetById("api/Personas", Id);

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            persona = respuesta.Respuesta ?? new Persona();
        }

        cargando = false;
        StateHasChanged();
    }

    private async Task Actualizar()
    {
        var respuesta = await PersonaServicio.Put("api/Personas", persona);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/personas");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/personas");
    }
}