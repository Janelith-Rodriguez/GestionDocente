@page "/personas/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IPersonaServicio PersonaServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Crear Persona</h3>

<EditForm Model="@nuevaPersona" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="nombre">Nombre:</label>
        <InputText id="nombre" @bind-Value="nuevaPersona.Nombre" class="form-control" />
        <ValidationMessage For="@(() => nuevaPersona.Nombre)" />
    </div>

    <div class="form-group">
        <label for="apellido">Apellido:</label>
        <InputText id="apellido" @bind-Value="nuevaPersona.Apellido" class="form-control" />
        <ValidationMessage For="@(() => nuevaPersona.Apellido)" />
    </div>

    <div class="form-group">
        <label for="documento">Documento:</label>
        <InputText id="documento" @bind-Value="nuevaPersona.Documento" class="form-control" />
        <ValidationMessage For="@(() => nuevaPersona.Documento)" />
    </div>

    <div class="form-group">
        <label for="telefono">Teléfono:</label>
        <InputText id="telefono" @bind-Value="nuevaPersona.Telefono" class="form-control" />
        <ValidationMessage For="@(() => nuevaPersona.Telefono)" />
    </div>

    <div class="form-group">
        <label for="domicilio">Domicilio:</label>
        <InputText id="domicilio" @bind-Value="nuevaPersona.Domicilio" class="form-control" />
        <ValidationMessage For="@(() => nuevaPersona.Domicilio)" />
    </div>

    <div class="form-group">
        <label for="tipoDocumentoId">Tipo Documento ID:</label>
        <InputNumber id="tipoDocumentoId" @bind-Value="nuevaPersona.TipoDocumentoId" class="form-control" />
        <ValidationMessage For="@(() => nuevaPersona.TipoDocumentoId)" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@code {
    private Persona nuevaPersona = new();

    private async Task Guardar()
    {
        var respuesta = await PersonaServicio.Post("api/Personas", nuevaPersona);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/personas");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/personas");
    }
}
