@page "/personas"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IPersonaServicio PersonaServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Personas</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="CrearNuevo">Crear Nueva</button>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Documento</th>
                <th>Teléfono</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in personas)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.Documento</td>
                    <td>@item.Telefono</td>
                    <td>@(item.Activo ? "Sí" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => Editar(item.Id)">Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(item)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Persona> personas = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        error = false;
        StateHasChanged();

        var respuesta = await PersonaServicio.GetAll("api/Personas");

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            personas = respuesta.Respuesta ?? new List<Persona>();
        }

        cargando = false;
        StateHasChanged();
    }

    private void CrearNuevo()
    {
        Navigation.NavigateTo("/personas/crear");
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/personas/editar/{id}");
    }

    private async Task Eliminar(Persona persona)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar {persona.Nombre} {persona.Apellido}?"))
            return;

        var respuesta = await PersonaServicio.Delete("api/Personas", persona.Id);

        if (respuesta.Error)
        {
            mensajeError = await respuesta.ObtenerError();
            error = true;
        }
        else
        {
            await CargarDatos();
        }
    }
}
