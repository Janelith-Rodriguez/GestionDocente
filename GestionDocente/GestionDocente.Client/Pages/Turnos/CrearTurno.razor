@page "/turnos/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ITurnoServicio TurnoServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
<h3>Crear Turno</h3>

<EditForm Model="@nuevoTurno" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="profesorId">Profesor ID:</label>
        <InputNumber id="profesorId" @bind-Value="nuevoTurno.ProfesorId" class="form-control" />
        <ValidationMessage For="@(() => nuevoTurno.ProfesorId)" />
    </div>

    <div class="form-group">
        <label for="materiaEnPlanEstudioId">Materia Plan ID:</label>
        <InputNumber id="materiaEnPlanEstudioId" @bind-Value="nuevoTurno.MateriaEnPlanEstudioId" class="form-control" />
        <ValidationMessage For="@(() => nuevoTurno.MateriaEnPlanEstudioId)" />
    </div>

    <div class="form-group">
        <label for="sede">Sede:</label>
        <InputText id="sede" @bind-Value="nuevoTurno.Sede" class="form-control" />
        <ValidationMessage For="@(() => nuevoTurno.Sede)" />
    </div>

    <div class="form-group">
        <label for="horario">Horario:</label>
        <InputText id="horario" @bind-Value="nuevoTurno.Horario" class="form-control" />
        <ValidationMessage For="@(() => nuevoTurno.Horario)" />
    </div>

    <div class="form-group">
        <label for="annoCicloLectivo">Ciclo Lectivo:</label>
        <InputNumber id="annoCicloLectivo" @bind-Value="nuevoTurno.AnnoCicloLectivo" class="form-control" />
        <ValidationMessage For="@(() => nuevoTurno.AnnoCicloLectivo)" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@code {
    private Turno nuevoTurno = new();

    private async Task Guardar()
    {
        var respuesta = await TurnoServicio.Post("api/Turnos", nuevoTurno);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/turnos");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/turnos");
    }
}
