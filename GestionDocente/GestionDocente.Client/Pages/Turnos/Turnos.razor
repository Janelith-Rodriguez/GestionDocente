@page "/turnos"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ITurnoServicio TurnoServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
<h3>Turnos</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="CrearNuevo">Crear Nuevo</button>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Profesor ID</th>
                <th>Materia Plan ID</th>
                <th>Sede</th>
                <th>Horario</th>
                <th>Ciclo Lectivo</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in turnos)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ProfesorId</td>
                    <td>@item.MateriaEnPlanEstudioId</td>
                    <td>@item.Sede</td>
                    <td>@item.Horario</td>
                    <td>@item.AnnoCicloLectivo</td>
                    <td>@(item.Activo ? "Sí" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => Editar(item.Id)">Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(item)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Turno> turnos = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        error = false;
        StateHasChanged();

        var respuesta = await TurnoServicio.GetAll("api/Turnos");

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            turnos = respuesta.Respuesta ?? new List<Turno>();
        }

        cargando = false;
        StateHasChanged();
    }

    private void CrearNuevo()
    {
        Navigation.NavigateTo("/turnos/crear");
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/turnos/editar/{id}");
    }

    private async Task Eliminar(Turno turno)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar este turno?"))
            return;

        var respuesta = await TurnoServicio.Delete("api/Turnos", turno.Id);

        if (respuesta.Error)
        {
            mensajeError = await respuesta.ObtenerError();
            error = true;
        }
        else
        {
            await CargarDatos();
        }
    }
}
