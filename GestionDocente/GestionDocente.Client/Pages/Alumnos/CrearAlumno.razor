@page "/alumnos/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IAlumnoServicio AlumnoServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
<h3>Crear Alumno</h3>

<EditForm Model="@nuevoAlumno" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="usuarioId">Usuario ID:</label>
        <InputNumber id="usuarioId" @bind-Value="nuevoAlumno.UsuarioId" class="form-control" />
        <ValidationMessage For="@(() => nuevoAlumno.UsuarioId)" />
    </div>

    <div class="form-group">
        <label for="sexo">Sexo:</label>
        <InputText id="sexo" @bind-Value="nuevoAlumno.Sexo" class="form-control" />
        <ValidationMessage For="@(() => nuevoAlumno.Sexo)" />
    </div>

    <div class="form-group">
        <label for="fechaNacimiento">Fecha Nacimiento:</label>
        <InputDate id="fechaNacimiento" @bind-Value="nuevoAlumno.FechaNacimiento" class="form-control" />
        <ValidationMessage For="@(() => nuevoAlumno.FechaNacimiento)" />
    </div>

    <div class="form-group">
        <label for="edad">Edad:</label>
        <InputNumber id="edad" @bind-Value="nuevoAlumno.Edad" class="form-control" />
        <ValidationMessage For="@(() => nuevoAlumno.Edad)" />
    </div>

    <div class="form-group">
        <label for="cuil">CUIL:</label>
        <InputText id="cuil" @bind-Value="nuevoAlumno.CUIL" class="form-control" />
        <ValidationMessage For="@(() => nuevoAlumno.CUIL)" />
    </div>

    <div class="form-group">
        <label for="pais">País:</label>
        <InputText id="pais" @bind-Value="nuevoAlumno.Pais" class="form-control" />
        <ValidationMessage For="@(() => nuevoAlumno.Pais)" />
    </div>

    <div class="form-group">
        <label for="provincia">Provincia:</label>
        <InputText id="provincia" @bind-Value="nuevoAlumno.Provincia" class="form-control" />
        <ValidationMessage For="@(() => nuevoAlumno.Provincia)" />
    </div>

    <div class="form-group">
        <label for="departamento">Departamento:</label>
        <InputText id="departamento" @bind-Value="nuevoAlumno.Departamento" class="form-control" />
        <ValidationMessage For="@(() => nuevoAlumno.Departamento)" />
    </div>

    <div class="form-group form-check">
        <InputCheckbox id="estado" @bind-Value="nuevoAlumno.Estado" class="form-check-input" />
        <label for="estado" class="form-check-label">Estado Activo</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@code {
    private Alumno nuevoAlumno = new() { Estado = true };

    private async Task Guardar()
    {
        var respuesta = await AlumnoServicio.Post("api/Alumnos", nuevoAlumno);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/alumnos");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/alumnos");
    }
}
