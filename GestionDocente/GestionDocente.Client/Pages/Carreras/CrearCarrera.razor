@page "/carreras/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ICarreraServicio CarreraServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Crear Carrera</h3>

<EditForm Model="@nuevaCarrera" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="nombre">Nombre:</label>
        <InputText id="nombre" @bind-Value="nuevaCarrera.Nombre" class="form-control" />
        <ValidationMessage For="@(() => nuevaCarrera.Nombre)" />
    </div>

    <div class="form-group">
        <label for="duracion">Duración:</label>
        <InputText id="duracion" @bind-Value="nuevaCarrera.DuracionCarrera" class="form-control" />
        <ValidationMessage For="@(() => nuevaCarrera.DuracionCarrera)" />
    </div>

    <div class="form-group">
        <label for="modalidad">Modalidad:</label>
        <InputText id="modalidad" @bind-Value="nuevaCarrera.Modalidad" class="form-control" />
        <ValidationMessage For="@(() => nuevaCarrera.Modalidad)" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@code {
    private Carrera nuevaCarrera = new();

    private async Task Guardar()
    {
        var respuesta = await CarreraServicio.Post("api/Carreras", nuevaCarrera);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/carreras");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/carreras");
    }
}
