@page "/clases/editar/{Id:int}"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IClaseServicio ClaseServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Editar Clase</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <EditForm Model="@clase" OnValidSubmit="@Actualizar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="turnoId">Turno ID:</label>
            <InputNumber id="turnoId" @bind-Value="clase.TurnoId" class="form-control" />
            <ValidationMessage For="@(() => clase.TurnoId)" />
        </div>

        <div class="form-group">
            <label for="fecha">Fecha:</label>
            <InputDate id="fecha" @bind-Value="clase.Fecha" class="form-control" />
            <ValidationMessage For="@(() => clase.Fecha)" />
        </div>

        <div class="form-group form-check">
            <InputCheckbox id="activo" @bind-Value="clase.Activo" class="form-check-input" />
            <label for="activo" class="form-check-label">Activo</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Actualizar</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private Clase clase = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnParametersSetAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        StateHasChanged();

        var respuesta = await ClaseServicio.GetById("api/Clases", Id);

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            clase = respuesta.Respuesta ?? new Clase();
        }

        cargando = false;
        StateHasChanged();
    }

    private async Task Actualizar()
    {
        var respuesta = await ClaseServicio.Put("api/Clases", clase);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/clases");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/clases");
    }
}
