@page "/clases"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IClaseServicio ClaseServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
<h3>Clases</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="CrearNuevo">Crear Nueva</button>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Turno ID</th>
                <th>Fecha</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in clases)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.TurnoId</td>
                    <td>@item.Fecha.ToShortDateString()</td>
                    <td>@(item.Activo ? "Sí" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => Editar(item.Id)">Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(item)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Clase> clases = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        error = false;
        StateHasChanged();

        var respuesta = await ClaseServicio.GetAll("api/Clases");

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            clases = respuesta.Respuesta ?? new List<Clase>();
        }

        cargando = false;
        StateHasChanged();
    }

    private void CrearNuevo()
    {
        Navigation.NavigateTo("/clases/crear");
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/clases/editar/{id}");
    }

    private async Task Eliminar(Clase clase)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar esta clase?"))
            return;

        var respuesta = await ClaseServicio.Delete("api/Clases", clase.Id);

        if (respuesta.Error)
        {
            mensajeError = await respuesta.ObtenerError();
            error = true;
        }
        else
        {
            await CargarDatos();
        }
    }
}
