@page "/materias/editar/{Id:int}"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IMateriaServicio MateriaServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Editar Materia</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <EditForm Model="@materia" OnValidSubmit="@Actualizar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <InputText id="nombre" @bind-Value="materia.Nombre" class="form-control" />
            <ValidationMessage For="@(() => materia.Nombre)" />
        </div>

        <div class="form-group">
            <label for="formato">Formato:</label>
            <InputText id="formato" @bind-Value="materia.Formato" class="form-control" />
            <ValidationMessage For="@(() => materia.Formato)" />
        </div>

        <div class="form-group">
            <label for="formacion">Formación:</label>
            <InputText id="formacion" @bind-Value="materia.Formacion" class="form-control" />
            <ValidationMessage For="@(() => materia.Formacion)" />
        </div>

        <div class="form-group">
            <label for="resolucion">Resolución Ministerial:</label>
            <InputText id="resolucion" @bind-Value="materia.ResolucionMinisterial" class="form-control" />
            <ValidationMessage For="@(() => materia.ResolucionMinisterial)" />
        </div>

        <div class="form-group">
            <label for="anno">Año:</label>
            <InputNumber id="anno" @bind-Value="materia.Anno" class="form-control" />
            <ValidationMessage For="@(() => materia.Anno)" />
        </div>

        <div class="form-group form-check">
            <InputCheckbox id="activo" @bind-Value="materia.Activo" class="form-check-input" />
            <label for="activo" class="form-check-label">Activo</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Actualizar</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private Materia materia = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnParametersSetAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        StateHasChanged();

        var respuesta = await MateriaServicio.GetById("api/Materias", Id);

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            materia = respuesta.Respuesta ?? new Materia();
        }

        cargando = false;
        StateHasChanged();
    }

    private async Task Actualizar()
    {
        var respuesta = await MateriaServicio.Put("api/Materias", materia);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/materias");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/materias");
    }
}
