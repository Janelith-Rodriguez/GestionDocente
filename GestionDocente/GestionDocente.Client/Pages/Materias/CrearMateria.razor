@page "/materias/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IMateriaServicio MateriaServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Crear Materia</h3>

<EditForm Model="@nuevaMateria" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="nombre">Nombre:</label>
        <InputText id="nombre" @bind-Value="nuevaMateria.Nombre" class="form-control" />
        <ValidationMessage For="@(() => nuevaMateria.Nombre)" />
    </div>

    <div class="form-group">
        <label for="formato">Formato:</label>
        <InputText id="formato" @bind-Value="nuevaMateria.Formato" class="form-control" />
        <ValidationMessage For="@(() => nuevaMateria.Formato)" />
    </div>

    <div class="form-group">
        <label for="formacion">Formación:</label>
        <InputText id="formacion" @bind-Value="nuevaMateria.Formacion" class="form-control" />
        <ValidationMessage For="@(() => nuevaMateria.Formacion)" />
    </div>

    <div class="form-group">
        <label for="resolucion">Resolución Ministerial:</label>
        <InputText id="resolucion" @bind-Value="nuevaMateria.ResolucionMinisterial" class="form-control" />
        <ValidationMessage For="@(() => nuevaMateria.ResolucionMinisterial)" />
    </div>

    <div class="form-group">
        <label for="anno">Año:</label>
        <InputNumber id="anno" @bind-Value="nuevaMateria.Anno" class="form-control" />
        <ValidationMessage For="@(() => nuevaMateria.Anno)" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@code {
    private Materia nuevaMateria = new();

    private async Task Guardar()
    {
        var respuesta = await MateriaServicio.Post("api/Materias", nuevaMateria);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/materias");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/materias");
    }
}
