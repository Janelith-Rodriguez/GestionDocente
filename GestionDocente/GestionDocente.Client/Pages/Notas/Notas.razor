@page "/notas"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject INotaServicio NotaServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Notas</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="CrearNuevo">Crear Nueva</button>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Evaluación ID</th>
                <th>Valor Nota</th>
                <th>Asistencia</th>
                <th>Cursado ID</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in notas)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.EvaluacionId</td>
                    <td>@item.ValorNota</td>
                    <td>@item.Asistencia</td>
                    <td>@item.CursadoMateriaId</td>
                    <td>@(item.Activo ? "Sí" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => Editar(item.Id)">Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(item)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Nota> notas = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        error = false;
        StateHasChanged();

        var respuesta = await NotaServicio.GetAll("api/Notas");

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            notas = respuesta.Respuesta ?? new List<Nota>();
        }

        cargando = false;
        StateHasChanged();
    }

    private void CrearNuevo()
    {
        Navigation.NavigateTo("/notas/crear");
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/notas/editar/{id}");
    }

    private async Task Eliminar(Nota nota)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar esta nota?"))
            return;

        var respuesta = await NotaServicio.Delete("api/Notas", nota.Id);

        if (respuesta.Error)
        {
            mensajeError = await respuesta.ObtenerError();
            error = true;
        }
        else
        {
            await CargarDatos();
        }
    }
}
