@page "/evaluaciones/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IEvaluacionServicio EvaluacionServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
<h3>Crear Evaluación</h3>

<EditForm Model="@nuevaEvaluacion" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="turnoId">Turno ID:</label>
        <InputNumber id="turnoId" @bind-Value="nuevaEvaluacion.TurnoId" class="form-control" />
        <ValidationMessage For="@(() => nuevaEvaluacion.TurnoId)" />
    </div>

    <div class="form-group">
        <label for="fecha">Fecha:</label>
        <InputDate id="fecha" @bind-Value="nuevaEvaluacion.Fecha" class="form-control" />
        <ValidationMessage For="@(() => nuevaEvaluacion.Fecha)" />
    </div>

    <div class="form-group">
        <label for="tipoEvaluacion">Tipo Evaluación:</label>
        <InputText id="tipoEvaluacion" @bind-Value="nuevaEvaluacion.TipoEvaluacion" class="form-control" />
        <ValidationMessage For="@(() => nuevaEvaluacion.TipoEvaluacion)" />
    </div>

    <div class="form-group">
        <label for="folio">Folio:</label>
        <InputText id="folio" @bind-Value="nuevaEvaluacion.Folio" class="form-control" />
        <ValidationMessage For="@(() => nuevaEvaluacion.Folio)" />
    </div>

    <div class="form-group">
        <label for="libro">Libro:</label>
        <InputText id="libro" @bind-Value="nuevaEvaluacion.Libro" class="form-control" />
        <ValidationMessage For="@(() => nuevaEvaluacion.Libro)" />
    </div>

    <div class="form-group">
        <label for="sede">Sede:</label>
        <InputText id="sede" @bind-Value="nuevaEvaluacion.Sede" class="form-control" />
        <ValidationMessage For="@(() => nuevaEvaluacion.Sede)" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@code {
    private Evaluacion nuevaEvaluacion = new();

    private async Task Guardar()
    {
        var respuesta = await EvaluacionServicio.Post("api/Evaluaciones", nuevaEvaluacion);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/evaluaciones");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/evaluaciones");
    }
}
