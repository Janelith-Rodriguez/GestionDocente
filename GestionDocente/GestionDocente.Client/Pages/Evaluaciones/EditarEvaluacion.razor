@page "/evaluaciones/editar/{Id:int}"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IEvaluacionServicio EvaluacionServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Editar Evaluación</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <EditForm Model="@evaluacion" OnValidSubmit="@Actualizar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="turnoId">Turno ID:</label>
            <InputNumber id="turnoId" @bind-Value="evaluacion.TurnoId" class="form-control" />
            <ValidationMessage For="@(() => evaluacion.TurnoId)" />
        </div>

        <div class="form-group">
            <label for="fecha">Fecha:</label>
            <InputDate id="fecha" @bind-Value="evaluacion.Fecha" class="form-control" />
            <ValidationMessage For="@(() => evaluacion.Fecha)" />
        </div>

        <div class="form-group">
            <label for="tipoEvaluacion">Tipo Evaluación:</label>
            <InputText id="tipoEvaluacion" @bind-Value="evaluacion.TipoEvaluacion" class="form-control" />
            <ValidationMessage For="@(() => evaluacion.TipoEvaluacion)" />
        </div>

        <div class="form-group">
            <label for="folio">Folio:</label>
            <InputText id="folio" @bind-Value="evaluacion.Folio" class="form-control" />
            <ValidationMessage For="@(() => evaluacion.Folio)" />
        </div>

        <div class="form-group">
            <label for="libro">Libro:</label>
            <InputText id="libro" @bind-Value="evaluacion.Libro" class="form-control" />
            <ValidationMessage For="@(() => evaluacion.Libro)" />
        </div>

        <div class="form-group">
            <label for="sede">Sede:</label>
            <InputText id="sede" @bind-Value="evaluacion.Sede" class="form-control" />
            <ValidationMessage For="@(() => evaluacion.Sede)" />
        </div>

        <div class="form-group form-check">
            <InputCheckbox id="activo" @bind-Value="evaluacion.Activo" class="form-check-input" />
            <label for="activo" class="form-check-label">Activo</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Actualizar</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private Evaluacion evaluacion = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnParametersSetAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        StateHasChanged();

        var respuesta = await EvaluacionServicio.GetById("api/Evaluaciones", Id);

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            evaluacion = respuesta.Respuesta ?? new Evaluacion();
        }

        cargando = false;
        StateHasChanged();
    }

    private async Task Actualizar()
    {
        var respuesta = await EvaluacionServicio.Put("api/Evaluaciones", evaluacion);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/evaluaciones");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/evaluaciones");
    }
}

