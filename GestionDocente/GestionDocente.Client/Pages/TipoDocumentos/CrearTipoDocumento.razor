@page "/tipodocumentos/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ITipoDocumentoServicio TipoDocumentoServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Crear Nuevo Tipo de Documento</h3>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Nuevo Tipo de Documento</h5>
    </div>
    <div class="card-body">
        <EditForm Model="@nuevoTipoDocumento" OnValidSubmit="@Guardar">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="codigo" class="form-label">Código:</label>
                        <InputText id="codigo" @bind-Value="nuevoTipoDocumento.Codigo" class="form-control"
                                   placeholder="Ingrese el código (ej: DOC001)" />
                        <ValidationMessage For="@(() => nuevoTipoDocumento.Codigo)" />
                        <small class="form-text text-muted">Código único identificador del tipo de documento.</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="nombre" class="form-label">Nombre:</label>
                        <InputText id="nombre" @bind-Value="nuevoTipoDocumento.Nombre" class="form-control"
                                   placeholder="Ingrese el nombre descriptivo" />
                        <ValidationMessage For="@(() => nuevoTipoDocumento.Nombre)" />
                        <small class="form-text text-muted">Nombre descriptivo del tipo de documento.</small>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <InputCheckbox id="activo" @bind-Value="nuevoTipoDocumento.Activo" class="form-check-input" />
                    <label for="activo" class="form-check-label">Activo</label>
                </div>
                <small class="form-text text-muted">
                    Marque esta opción si el tipo de documento estará disponible inmediatamente después de crearlo.
                </small>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success me-2" disabled="@procesando">
                    @if (procesando)
                    {
                        <span>
                            <span class="spinner-border spinner-border-sm me-2" role="status">
                                <span class="visually-hidden">Guardando...</span>
                            </span>
                            Guardando...
                        </span>
                    }
                    else
                    {
                        <span>
                            <i class="fas fa-save me-1"></i>Guardar
                        </span>
                    }
                </button>
                <button type="button" class="btn btn-secondary me-2" @onclick="Cancelar" disabled="@procesando">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <button type="button" class="btn btn-outline-info" @onclick="VolverALista" disabled="@procesando">
                    <i class="fas fa-list me-1"></i>Volver a la lista
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private TipoDocumento nuevoTipoDocumento = new() { Activo = true };
    private bool procesando = false;

    private async Task Guardar()
    {
        if (procesando) return;

        procesando = true;
        StateHasChanged();

        try
        {
            var respuesta = await TipoDocumentoServicio.Post("api/TipoDocumentos", nuevoTipoDocumento);

            if (respuesta.Error)
            {
                var error = await respuesta.ObtenerError();
                await JSRuntime.InvokeVoidAsync("alert", $"Error al guardar: {error}");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Tipo de documento creado correctamente");
                Navigation.NavigateTo("/tipodocumentos");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            procesando = false;
            StateHasChanged();
        }
    }

    private void Cancelar()
    {
        if (!procesando)
        {
            Navigation.NavigateTo("/tipodocumentos");
        }
    }

    private void VolverALista()
    {
        if (!procesando)
        {
            Navigation.NavigateTo("/tipodocumentos");
        }
    }
}