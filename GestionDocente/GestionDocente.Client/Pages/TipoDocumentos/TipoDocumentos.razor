@page "/TipoDocumentos"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ITipoDocumentoServicio TipoDocumentoServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Tipos de Documento</h3>

@if (cargando)
{
    <div class="alert alert-info">
        <div class="spinner-border spinner-border-sm me-2" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        Cargando tipos de documento...
    </div>
}
else if (error)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @mensajeError
        <button class="btn btn-sm btn-outline-danger ms-2" @onclick="Recargar">Reintentar</button>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Lista de Tipos de Documento</h5>
                <button class="btn btn-primary" @onclick="CrearNuevo" disabled="@procesando">
                    <i class="fas fa-plus me-1"></i>Crear Nuevo
                </button>
            </div>
        </div>
        <div class="card-body">
            @if (!tipoDocumentos.Any())
            {
                <div class="alert alert-warning text-center">
                    No se encontraron tipos de documento.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Código</th>
                                <th>Nombre</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in tipoDocumentos)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Codigo</span>
                                    </td>
                                    <td>@item.Nombre</td>
                                    <td>
                                        @if (item.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button class="btn btn-warning" @onclick="() => Editar(item.Id)"
                                                    title="Editar" disabled="@procesando">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-danger" @onclick="() => Eliminar(item)"
                                                    title="Eliminar" disabled="@procesando">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
}

@code {
    private List<TipoDocumento> tipoDocumentos = new();
    private bool cargando = true;
    private bool error = false;
    private bool procesando = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        error = false;
        StateHasChanged();

        try
        {
            var respuesta = await TipoDocumentoServicio.GetAll("api/TipoDocumentos");

            if (respuesta.Error)
            {
                error = true;
                mensajeError = await respuesta.ObtenerError();
            }
            else
            {
                tipoDocumentos = respuesta.Respuesta ?? new List<TipoDocumento>();
            }
        }
        catch (Exception ex)
        {
            error = true;
            mensajeError = $"Error al cargar los datos: {ex.Message}";
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task Recargar()
    {
        await CargarDatos();
    }

    private void CrearNuevo()
    {
        Navigation.NavigateTo("/tipodocumentos/crear");
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/tipodocumentos/editar/{id}");
    }

    private async Task Eliminar(TipoDocumento tipoDocumento)
    {
        if (procesando) return;

        var mensajeConfirmacion = $"¿Está seguro de eliminar el tipo de documento '{tipoDocumento.Nombre}' (Código: {tipoDocumento.Codigo})?";

        if (!await JSRuntime.InvokeAsync<bool>("confirm", mensajeConfirmacion))
            return;

        procesando = true;
        StateHasChanged();

        try
        {
            var respuesta = await TipoDocumentoServicio.Delete("api/TipoDocumentos", tipoDocumento.Id);

            if (respuesta.Error)
            {
                mensajeError = await respuesta.ObtenerError();
                error = true;
                await JSRuntime.InvokeVoidAsync("alert", $"Error al eliminar: {mensajeError}");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Tipo de documento eliminado correctamente");
                await CargarDatos();
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
        finally
        {
            procesando = false;
            StateHasChanged();
        }
    }
}
