@page "/coordinadores/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ICoordinadorServicio CoordinadorServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
<h3>Crear Coordinador</h3>

<EditForm Model="@nuevoCoordinador" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="usuarioId">Usuario ID:</label>
        <InputNumber id="usuarioId" @bind-Value="nuevoCoordinador.UsuarioId" class="form-control" />
        <ValidationMessage For="@(() => nuevoCoordinador.UsuarioId)" />
    </div>

    <div class="form-group">
        <label for="carreraId">Carrera ID:</label>
        <InputNumber id="carreraId" @bind-Value="nuevoCoordinador.CarreraId" class="form-control" />
        <ValidationMessage For="@(() => nuevoCoordinador.CarreraId)" />
    </div>

    <div class="form-group form-check">
        <InputCheckbox id="estado" @bind-Value="nuevoCoordinador.Estado" class="form-check-input" />
        <label for="estado" class="form-check-label">Estado Activo</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@code {
    private Coordinador nuevoCoordinador = new() { Estado = true };

    private async Task Guardar()
    {
        var respuesta = await CoordinadorServicio.Post("api/Coordinadores", nuevoCoordinador);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/coordinadores");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/coordinadores");
    }
}
