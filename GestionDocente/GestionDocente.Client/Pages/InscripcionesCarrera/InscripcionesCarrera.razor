@page "/inscripcionescarrera"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IInscripcionCarreraServicio InscripcionCarreraServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
<h3>Inscripciones a Carrera</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="CrearNuevo">Crear Nueva</button>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Alumno ID</th>
                <th>Carrera ID</th>
                <th>Cohorte</th>
                <th>Legajo</th>
                <th>Estado Alumno</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in inscripciones)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.AlumnoId</td>
                    <td>@item.CarreraId</td>
                    <td>@item.Cohorte</td>
                    <td>@item.Legajo</td>
                    <td>@item.EstadoAlumno</td>
                    <td>@(item.Activo ? "Sí" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => Editar(item.Id)">Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(item)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<InscripcionCarrera> inscripciones = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        error = false;
        StateHasChanged();

        var respuesta = await InscripcionCarreraServicio.GetAll("api/InscripcionesCarrera");

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            inscripciones = respuesta.Respuesta ?? new List<InscripcionCarrera>();
        }

        cargando = false;
        StateHasChanged();
    }

    private void CrearNuevo()
    {
        Navigation.NavigateTo("/inscripcionescarrera/crear");
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/inscripcionescarrera/editar/{id}");
    }

    private async Task Eliminar(InscripcionCarrera inscripcion)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar esta inscripción?"))
            return;

        var respuesta = await InscripcionCarreraServicio.Delete("api/InscripcionesCarrera", inscripcion.Id);

        if (respuesta.Error)
        {
            mensajeError = await respuesta.ObtenerError();
            error = true;
        }
        else
        {
            await CargarDatos();
        }
    }
}
