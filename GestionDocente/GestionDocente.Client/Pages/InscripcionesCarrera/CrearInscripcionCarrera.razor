@page "/inscripcionescarrera/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IInscripcionCarreraServicio InscripcionCarreraServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
<h3>Crear Inscripción a Carrera</h3>

<EditForm Model="@nuevaInscripcion" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="alumnoId">Alumno ID:</label>
        <InputNumber id="alumnoId" @bind-Value="nuevaInscripcion.AlumnoId" class="form-control" />
        <ValidationMessage For="@(() => nuevaInscripcion.AlumnoId)" />
    </div>

    <div class="form-group">
        <label for="carreraId">Carrera ID:</label>
        <InputNumber id="carreraId" @bind-Value="nuevaInscripcion.CarreraId" class="form-control" />
        <ValidationMessage For="@(() => nuevaInscripcion.CarreraId)" />
    </div>

    <div class="form-group">
        <label for="cohorte">Cohorte:</label>
        <InputNumber id="cohorte" @bind-Value="nuevaInscripcion.Cohorte" class="form-control" />
        <ValidationMessage For="@(() => nuevaInscripcion.Cohorte)" />
    </div>

    <div class="form-group">
        <label for="legajo">Legajo:</label>
        <InputText id="legajo" @bind-Value="nuevaInscripcion.Legajo" class="form-control" />
        <ValidationMessage For="@(() => nuevaInscripcion.Legajo)" />
    </div>

    <div class="form-group">
        <label for="estadoAlumno">Estado Alumno:</label>
        <InputText id="estadoAlumno" @bind-Value="nuevaInscripcion.EstadoAlumno" class="form-control" />
        <ValidationMessage For="@(() => nuevaInscripcion.EstadoAlumno)" />
    </div>

    <div class="form-group">
        <label for="libroMatriz">Libro Matriz:</label>
        <InputText id="libroMatriz" @bind-Value="nuevaInscripcion.LibroMatriz" class="form-control" />
        <ValidationMessage For="@(() => nuevaInscripcion.LibroMatriz)" />
    </div>

    <div class="form-group">
        <label for="nroOrdenAlumno">Número Orden Alumno:</label>
        <InputText id="nroOrdenAlumno" @bind-Value="nuevaInscripcion.NroOrdenAlumno" class="form-control" />
        <ValidationMessage For="@(() => nuevaInscripcion.NroOrdenAlumno)" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@code {
    private InscripcionCarrera nuevaInscripcion = new();

    private async Task Guardar()
    {
        var respuesta = await InscripcionCarreraServicio.Post("api/InscripcionesCarrera", nuevaInscripcion);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/inscripcionescarrera");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/inscripcionescarrera");
    }
}