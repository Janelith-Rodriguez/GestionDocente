@page "/certificadosalumno"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ICertificadoAlumnoServicio CertificadoAlumnoServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Certificados de Alumno</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="CrearNuevo">Crear Nuevo</button>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Duración</th>
                <th>Modalidad</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in certificados)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.DuracionCarrera</td>
                    <td>@item.Modalidad</td>
                    <td>@(item.Activo ? "Sí" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => Editar(item.Id)">Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(item)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<CertificadoAlumno> certificados = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        error = false;
        StateHasChanged();

        var respuesta = await CertificadoAlumnoServicio.GetAll("api/CertificadosAlumno");

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            certificados = respuesta.Respuesta ?? new List<CertificadoAlumno>();
        }

        cargando = false;
        StateHasChanged();
    }

    private void CrearNuevo()
    {
        Navigation.NavigateTo("/certificadosalumno/crear");
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/certificadosalumno/editar/{id}");
    }

    private async Task Eliminar(CertificadoAlumno certificado)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar {certificado.Nombre}?"))
            return;

        var respuesta = await CertificadoAlumnoServicio.Delete("api/CertificadosAlumno", certificado.Id);

        if (respuesta.Error)
        {
            mensajeError = await respuesta.ObtenerError();
            error = true;
        }
        else
        {
            await CargarDatos();
        }
    }
}
