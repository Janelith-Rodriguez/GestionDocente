@page "/certificadosalumno/editar/{Id:int}"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ICertificadoAlumnoServicio CertificadoAlumnoServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Editar Certificado de Alumno</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <EditForm Model="@certificado" OnValidSubmit="@Actualizar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <InputText id="nombre" @bind-Value="certificado.Nombre" class="form-control" />
            <ValidationMessage For="@(() => certificado.Nombre)" />
        </div>

        <div class="form-group">
            <label for="duracionCarrera">Duración Carrera:</label>
            <InputText id="duracionCarrera" @bind-Value="certificado.DuracionCarrera" class="form-control" />
            <ValidationMessage For="@(() => certificado.DuracionCarrera)" />
        </div>

        <div class="form-group">
            <label for="modalidad">Modalidad:</label>
            <InputText id="modalidad" @bind-Value="certificado.Modalidad" class="form-control" />
            <ValidationMessage For="@(() => certificado.Modalidad)" />
        </div>

        <div class="form-group form-check">
            <InputCheckbox id="activo" @bind-Value="certificado.Activo" class="form-check-input" />
            <label for="activo" class="form-check-label">Activo</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Actualizar</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private CertificadoAlumno certificado = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnParametersSetAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        StateHasChanged();

        var respuesta = await CertificadoAlumnoServicio.GetById("api/CertificadosAlumno", Id);

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            certificado = respuesta.Respuesta ?? new CertificadoAlumno();
        }

        cargando = false;
        StateHasChanged();
    }

    private async Task Actualizar()
    {
        var respuesta = await CertificadoAlumnoServicio.Put("api/CertificadosAlumno", certificado);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/certificadosalumno");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/certificadosalumno");
    }
}