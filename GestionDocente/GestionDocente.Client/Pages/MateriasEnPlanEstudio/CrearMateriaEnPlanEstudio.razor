@page "/materiasenplanestudio/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IMateriaEnPlanEstudioServicio MateriaEnPlanEstudioServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Crear Materia en Plan de Estudio</h3>

<EditForm Model="@nuevaMateriaPlan" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="materiaId">Materia ID:</label>
        <InputNumber id="materiaId" @bind-Value="nuevaMateriaPlan.MateriaId" class="form-control" />
        <ValidationMessage For="@(() => nuevaMateriaPlan.MateriaId)" />
    </div>

    <div class="form-group">
        <label for="planEstudioId">Plan Estudio ID:</label>
        <InputNumber id="planEstudioId" @bind-Value="nuevaMateriaPlan.PlanEstudioId" class="form-control" />
        <ValidationMessage For="@(() => nuevaMateriaPlan.PlanEstudioId)" />
    </div>

    <div class="form-group">
        <label for="hrsRelojAnuales">Horas Reloj Anuales:</label>
        <InputNumber id="hrsRelojAnuales" @bind-Value="nuevaMateriaPlan.HrsRelojAnuales" class="form-control" />
        <ValidationMessage For="@(() => nuevaMateriaPlan.HrsRelojAnuales)" />
    </div>

    <div class="form-group">
        <label for="hrsCatedraSemanales">Horas Cátedra Semanales:</label>
        <InputNumber id="hrsCatedraSemanales" @bind-Value="nuevaMateriaPlan.HrsCatedraSemanales" class="form-control" />
        <ValidationMessage For="@(() => nuevaMateriaPlan.HrsCatedraSemanales)" />
    </div>

    <div class="form-group">
        <label for="anualCuatrimestral">Duración:</label>
        <InputSelect id="anualCuatrimestral" @bind-Value="nuevaMateriaPlan.Anual_Cuatrimestral" class="form-control">
            <option value="">Seleccionar...</option>
            <option value="Anual">Anual</option>
            <option value="Cuatrimestral">Cuatrimestral</option>
        </InputSelect>
        <ValidationMessage For="@(() => nuevaMateriaPlan.Anual_Cuatrimestral)" />
    </div>

    <div class="form-group">
        <label for="anno">Año:</label>
        <InputNumber id="anno" @bind-Value="nuevaMateriaPlan.Anno" class="form-control" />
        <ValidationMessage For="@(() => nuevaMateriaPlan.Anno)" />
    </div>

    <div class="form-group">
        <label for="numeroOrden">Número Orden:</label>
        <InputNumber id="numeroOrden" @bind-Value="nuevaMateriaPlan.NumeroOrden" class="form-control" />
        <ValidationMessage For="@(() => nuevaMateriaPlan.NumeroOrden)" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@code {
    private MateriaEnPlanEstudio nuevaMateriaPlan = new();

    private async Task Guardar()
    {
        var respuesta = await MateriaEnPlanEstudioServicio.Post("api/MateriasEnPlanEstudio", nuevaMateriaPlan);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/materiasenplanestudio");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/materiasenplanestudio");
    }
}
