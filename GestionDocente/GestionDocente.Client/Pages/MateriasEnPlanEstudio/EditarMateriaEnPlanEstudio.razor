@page "/materiasenplanestudio/editar/{Id:int}"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IMateriaEnPlanEstudioServicio MateriaEnPlanEstudioServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Editar Materia en Plan de Estudio</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <EditForm Model="@materiaPlan" OnValidSubmit="@Actualizar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="materiaId">Materia ID:</label>
            <InputNumber id="materiaId" @bind-Value="materiaPlan.MateriaId" class="form-control" />
            <ValidationMessage For="@(() => materiaPlan.MateriaId)" />
        </div>

        <div class="form-group">
            <label for="planEstudioId">Plan Estudio ID:</label>
            <InputNumber id="planEstudioId" @bind-Value="materiaPlan.PlanEstudioId" class="form-control" />
            <ValidationMessage For="@(() => materiaPlan.PlanEstudioId)" />
        </div>

        <div class="form-group">
            <label for="hrsRelojAnuales">Horas Reloj Anuales:</label>
            <InputNumber id="hrsRelojAnuales" @bind-Value="materiaPlan.HrsRelojAnuales" class="form-control" />
            <ValidationMessage For="@(() => materiaPlan.HrsRelojAnuales)" />
        </div>

        <div class="form-group">
            <label for="hrsCatedraSemanales">Horas Cátedra Semanales:</label>
            <InputNumber id="hrsCatedraSemanales" @bind-Value="materiaPlan.HrsCatedraSemanales" class="form-control" />
            <ValidationMessage For="@(() => materiaPlan.HrsCatedraSemanales)" />
        </div>

        <div class="form-group">
            <label for="anualCuatrimestral">Duración:</label>
            <InputSelect id="anualCuatrimestral" @bind-Value="materiaPlan.Anual_Cuatrimestral" class="form-control">
                <option value="">Seleccionar...</option>
                <option value="Anual">Anual</option>
                <option value="Cuatrimestral">Cuatrimestral</option>
            </InputSelect>
            <ValidationMessage For="@(() => materiaPlan.Anual_Cuatrimestral)" />
        </div>

        <div class="form-group">
            <label for="anno">Año:</label>
            <InputNumber id="anno" @bind-Value="materiaPlan.Anno" class="form-control" />
            <ValidationMessage For="@(() => materiaPlan.Anno)" />
        </div>

        <div class="form-group">
            <label for="numeroOrden">Número Orden:</label>
            <InputNumber id="numeroOrden" @bind-Value="materiaPlan.NumeroOrden" class="form-control" />
            <ValidationMessage For="@(() => materiaPlan.NumeroOrden)" />
        </div>

        <div class="form-group form-check">
            <InputCheckbox id="activo" @bind-Value="materiaPlan.Activo" class="form-check-input" />
            <label for="activo" class="form-check-label">Activo</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Actualizar</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private MateriaEnPlanEstudio materiaPlan = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnParametersSetAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        StateHasChanged();

        var respuesta = await MateriaEnPlanEstudioServicio.GetById("api/MateriasEnPlanEstudio", Id);

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            materiaPlan = respuesta.Respuesta ?? new MateriaEnPlanEstudio();
        }

        cargando = false;
        StateHasChanged();
    }

    private async Task Actualizar()
    {
        var respuesta = await MateriaEnPlanEstudioServicio.Put("api/MateriasEnPlanEstudio", materiaPlan);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/materiasenplanestudio");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/materiasenplanestudio");
    }
}
