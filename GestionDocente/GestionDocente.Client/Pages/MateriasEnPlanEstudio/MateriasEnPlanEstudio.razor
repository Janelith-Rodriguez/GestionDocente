@page "/materiasenplanestudio"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IMateriaEnPlanEstudioServicio MateriaEnPlanEstudioServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
<h3>Materias en Plan de Estudio</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="CrearNuevo">Crear Nueva</button>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Materia ID</th>
                <th>Plan Estudio ID</th>
                <th>Horas Reloj</th>
                <th>Horas Cátedra</th>
                <th>Duración</th>
                <th>Año</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in materiasEnPlan)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.MateriaId</td>
                    <td>@item.PlanEstudioId</td>
                    <td>@item.HrsRelojAnuales</td>
                    <td>@item.HrsCatedraSemanales</td>
                    <td>@item.Anual_Cuatrimestral</td>
                    <td>@item.Anno</td>
                    <td>@(item.Activo ? "Sí" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => Editar(item.Id)">Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(item)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<MateriaEnPlanEstudio> materiasEnPlan = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        error = false;
        StateHasChanged();

        var respuesta = await MateriaEnPlanEstudioServicio.GetAll("api/MateriasEnPlanEstudio");

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            materiasEnPlan = respuesta.Respuesta ?? new List<MateriaEnPlanEstudio>();
        }

        cargando = false;
        StateHasChanged();
    }

    private void CrearNuevo()
    {
        Navigation.NavigateTo("/materiasenplanestudio/crear");
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/materiasenplanestudio/editar/{id}");
    }

    private async Task Eliminar(MateriaEnPlanEstudio materiaPlan)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar esta materia del plan?"))
            return;

        var respuesta = await MateriaEnPlanEstudioServicio.Delete("api/MateriasEnPlanEstudio", materiaPlan.Id);

        if (respuesta.Error)
        {
            mensajeError = await respuesta.ObtenerError();
            error = true;
        }
        else
        {
            await CargarDatos();
        }
    }
}
