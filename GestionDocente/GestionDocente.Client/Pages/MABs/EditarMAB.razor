@page "/mabs/editar/{Id:int}"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IMABServicio MABServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Editar MAB</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <EditForm Model="@mab" OnValidSubmit="@Actualizar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="profesorId">Profesor ID:</label>
            <InputNumber id="profesorId" @bind-Value="mab.ProfesorId" class="form-control" />
            <ValidationMessage For="@(() => mab.ProfesorId)" />
        </div>

        <div class="form-group">
            <label for="cupofProfesorId">CUPOF Profesor ID:</label>
            <InputNumber id="cupofProfesorId" @bind-Value="mab.CUPOF_ProfesorId" class="form-control" />
            <ValidationMessage For="@(() => mab.CUPOF_ProfesorId)" />
        </div>

        <div class="form-group">
            <label for="idMab">ID MAB:</label>
            <InputText id="idMab" @bind-Value="mab.IdMab" class="form-control" />
            <ValidationMessage For="@(() => mab.IdMab)" />
        </div>

        <div class="form-group">
            <label for="sitRevista">Situación Revista:</label>
            <InputText id="sitRevista" @bind-Value="mab.SitRevista" class="form-control" />
            <ValidationMessage For="@(() => mab.SitRevista)" />
        </div>

        <div class="form-group">
            <label for="fechaInicio">Fecha Inicio:</label>
            <InputDate id="fechaInicio" @bind-Value="mab.FechaInicio" class="form-control" />
            <ValidationMessage For="@(() => mab.FechaInicio)" />
        </div>

        <div class="form-group">
            <label for="fechaFin">Fecha Fin:</label>
            <InputDate id="fechaFin" @bind-Value="mab.FechaFin" class="form-control" />
            <ValidationMessage For="@(() => mab.FechaFin)" />
        </div>

        <div class="form-group form-check">
            <InputCheckbox id="activo" @bind-Value="mab.Activo" class="form-check-input" />
            <label for="activo" class="form-check-label">Activo</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Actualizar</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private MAB mab = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnParametersSetAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        StateHasChanged();

        var respuesta = await MABServicio.GetById("api/MABs", Id);

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            mab = respuesta.Respuesta ?? new MAB();
        }

        cargando = false;
        StateHasChanged();
    }

    private async Task Actualizar()
    {
        var respuesta = await MABServicio.Put("api/MABs", mab);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/mabs");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/mabs");
    }
}