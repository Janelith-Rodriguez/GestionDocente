@page "/mabs"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IMABServicio MABServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>MABs</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="CrearNuevo">Crear Nuevo</button>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Profesor ID</th>
                <th>CUPOF ID</th>
                <th>ID MAB</th>
                <th>Situación Revista</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in mabs)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ProfesorId</td>
                    <td>@item.CUPOF_ProfesorId</td>
                    <td>@item.IdMab</td>
                    <td>@item.SitRevista</td>
                    <td>@item.FechaInicio.ToShortDateString()</td>
                    <td>@item.FechaFin.ToShortDateString()</td>
                    <td>@(item.Activo ? "Sí" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => Editar(item.Id)">Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Eliminar(item)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<MAB> mabs = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        error = false;
        StateHasChanged();

        var respuesta = await MABServicio.GetAll("api/MABs");

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            mabs = respuesta.Respuesta ?? new List<MAB>();
        }

        cargando = false;
        StateHasChanged();
    }

    private void CrearNuevo()
    {
        Navigation.NavigateTo("/mabs/crear");
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/mabs/editar/{id}");
    }

    private async Task Eliminar(MAB mab)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"¿Está seguro de eliminar este MAB?"))
            return;

        var respuesta = await MABServicio.Delete("api/MABs", mab.Id);

        if (respuesta.Error)
        {
            mensajeError = await respuesta.ObtenerError();
            error = true;
        }
        else
        {
            await CargarDatos();
        }
    }
}
