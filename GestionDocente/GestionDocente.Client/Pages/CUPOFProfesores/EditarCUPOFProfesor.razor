@page "/cupofprofesores/editar/{Id:int}"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ICUPOF_ProfesorServicio CUPOFProfesorServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Editar CUPOF Profesor</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <EditForm Model="@cupof" OnValidSubmit="@Actualizar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="turnoId">Turno ID:</label>
            <InputNumber id="turnoId" @bind-Value="cupof.TurnoId" class="form-control" />
            <ValidationMessage For="@(() => cupof.TurnoId)" />
        </div>

        <div class="form-group">
            <label for="cupof">CUPOF:</label>
            <InputText id="cupof" @bind-Value="cupof.CUPOF" class="form-control" />
            <ValidationMessage For="@(() => cupof.CUPOF)" />
        </div>

        <div class="form-group">
            <label for="ocupadoLibre">Estado Ocupación:</label>
            <InputSelect id="ocupadoLibre" @bind-Value="cupof.Ocupado_Libre" class="form-control">
                <option value="">Seleccionar...</option>
                <option value="Ocupado">Ocupado</option>
                <option value="Libre">Libre</option>
            </InputSelect>
            <ValidationMessage For="@(() => cupof.Ocupado_Libre)" />
        </div>

        <div class="form-group form-check">
            <InputCheckbox id="estado" @bind-Value="cupof.Estado" class="form-check-input" />
            <label for="estado" class="form-check-label">Estado Activo</label>
        </div>

        <div class="form-group form-check">
            <InputCheckbox id="activo" @bind-Value="cupof.Activo" class="form-check-input" />
            <label for="activo" class="form-check-label">Activo</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Actualizar</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private CUPOF_Profesor cupof = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnParametersSetAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        StateHasChanged();

        var respuesta = await CUPOFProfesorServicio.GetById("api/CUPOFProfesores", Id);

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            cupof = respuesta.Respuesta ?? new CUPOF_Profesor();
        }

        cargando = false;
        StateHasChanged();
    }

    private async Task Actualizar()
    {
        var respuesta = await CUPOFProfesorServicio.Put("api/CUPOFProfesores", cupof);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/cupofprofesores");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/cupofprofesores");
    }
}
