@page "/cupofcoordinadores/editar/{Id:int}"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ICUPOF_CoordinadorServicio CUPOFCoordinadorServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Editar CUPOF Coordinador</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <EditForm Model="@cupof" OnValidSubmit="@Actualizar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="carreraId">Carrera ID:</label>
            <InputNumber id="carreraId" @bind-Value="cupof.CarreraId" class="form-control" />
            <ValidationMessage For="@(() => cupof.CarreraId)" />
        </div>

        <div class="form-group">
            <label for="coordinadorId">Coordinador ID:</label>
            <InputNumber id="coordinadorId" @bind-Value="cupof.CoordinadorId" class="form-control" />
            <ValidationMessage For="@(() => cupof.CoordinadorId)" />
        </div>

        <div class="form-group">
            <label for="cupof">CUPOF:</label>
            <InputText id="cupof" @bind-Value="cupof.CUPOF" class="form-control" />
            <ValidationMessage For="@(() => cupof.CUPOF)" />
        </div>

        <div class="form-group">
            <label for="ocupadoLibre">Estado Ocupación:</label>
            <InputSelect id="ocupadoLibre" @bind-Value="cupof.Ocupado_Libre" class="form-control">
                <option value="">Seleccionar...</option>
                <option value="Ocupado">Ocupado</option>
                <option value="Libre">Libre</option>
            </InputSelect>
            <ValidationMessage For="@(() => cupof.Ocupado_Libre)" />
        </div>

        <div class="form-group form-check">
            <InputCheckbox id="estado" @bind-Value="cupof.Estado" class="form-check-input" />
            <label for="estado" class="form-check-label">Estado Activo</label>
        </div>

        <div class="form-group">
            <label for="sede">Sede:</label>
            <InputText id="sede" @bind-Value="cupof.Sede" class="form-control" />
            <ValidationMessage For="@(() => cupof.Sede)" />
        </div>

        <div class="form-group form-check">
            <InputCheckbox id="activo" @bind-Value="cupof.Activo" class="form-check-input" />
            <label for="activo" class="form-check-label">Activo</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Actualizar</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private CUPOF_Coordinador cupof = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnParametersSetAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        StateHasChanged();

        var respuesta = await CUPOFCoordinadorServicio.GetById("api/CUPOFCoordinadores", Id);

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            cupof = respuesta.Respuesta ?? new CUPOF_Coordinador();
        }

        cargando = false;
        StateHasChanged();
    }

    private async Task Actualizar()
    {
        var respuesta = await CUPOFCoordinadorServicio.Put("api/CUPOFCoordinadores", cupof);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/cupofcoordinadores");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/cupofcoordinadores");
    }
}
