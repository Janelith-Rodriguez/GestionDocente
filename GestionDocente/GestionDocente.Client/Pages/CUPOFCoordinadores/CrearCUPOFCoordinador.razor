@page "/cupofcoordinadores/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ICUPOF_CoordinadorServicio CUPOFCoordinadorServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Crear CUPOF Coordinador</h3>

<EditForm Model="@nuevoCUPOF" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="carreraId">Carrera ID:</label>
        <InputNumber id="carreraId" @bind-Value="nuevoCUPOF.CarreraId" class="form-control" />
        <ValidationMessage For="@(() => nuevoCUPOF.CarreraId)" />
    </div>

    <div class="form-group">
        <label for="coordinadorId">Coordinador ID:</label>
        <InputNumber id="coordinadorId" @bind-Value="nuevoCUPOF.CoordinadorId" class="form-control" />
        <ValidationMessage For="@(() => nuevoCUPOF.CoordinadorId)" />
    </div>

    <div class="form-group">
        <label for="cupof">CUPOF:</label>
        <InputText id="cupof" @bind-Value="nuevoCUPOF.CUPOF" class="form-control" />
        <ValidationMessage For="@(() => nuevoCUPOF.CUPOF)" />
    </div>

    <div class="form-group">
        <label for="ocupadoLibre">Estado Ocupación:</label>
        <InputSelect id="ocupadoLibre" @bind-Value="nuevoCUPOF.Ocupado_Libre" class="form-control">
            <option value="">Seleccionar...</option>
            <option value="Ocupado">Ocupado</option>
            <option value="Libre">Libre</option>
        </InputSelect>
        <ValidationMessage For="@(() => nuevoCUPOF.Ocupado_Libre)" />
    </div>

    <div class="form-group form-check">
        <InputCheckbox id="estado" @bind-Value="nuevoCUPOF.Estado" class="form-check-input" />
        <label for="estado" class="form-check-label">Estado Activo</label>
    </div>

    <div class="form-group">
        <label for="sede">Sede:</label>
        <InputText id="sede" @bind-Value="nuevoCUPOF.Sede" class="form-control" />
        <ValidationMessage For="@(() => nuevoCUPOF.Sede)" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@code {
    private CUPOF_Coordinador nuevoCUPOF = new() { Estado = true };

    private async Task Guardar()
    {
        var respuesta = await CUPOFCoordinadorServicio.Post("api/CUPOFCoordinadores", nuevoCUPOF);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/cupofcoordinadores");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/cupofcoordinadores");
    }
}
