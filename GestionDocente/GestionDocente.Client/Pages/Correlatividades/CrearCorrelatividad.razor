@page "/correlatividades/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ICorrelatividadServicio CorrelatividadServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Crear Correlatividad</h3>

<EditForm Model="@nuevaCorrelatividad" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="materiaEnPlanEstudioId">Materia Plan ID:</label>
        <InputNumber id="materiaEnPlanEstudioId" @bind-Value="nuevaCorrelatividad.MateriaEnPlanEstudioId" class="form-control" />
        <ValidationMessage For="@(() => nuevaCorrelatividad.MateriaEnPlanEstudioId)" />
    </div>

    <div class="form-group">
        <label for="materiaCorrelativaId">Materia Correlativa ID:</label>
        <InputNumber id="materiaCorrelativaId" @bind-Value="nuevaCorrelatividad.MateriaCorrelativaId" class="form-control" />
        <ValidationMessage For="@(() => nuevaCorrelatividad.MateriaCorrelativaId)" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@code {
    private Correlatividad nuevaCorrelatividad = new();

    private async Task Guardar()
    {
        var respuesta = await CorrelatividadServicio.Post("api/Correlatividades", nuevaCorrelatividad);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/correlatividades");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/correlatividades");
    }
}
