@page "/correlatividades/editar/{Id:int}"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ICorrelatividadServicio CorrelatividadServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Editar Correlatividad</h3>

@if (cargando)
{
    <div class="alert alert-info">Cargando...</div>
}
else if (error)
{
    <div class="alert alert-danger">@mensajeError</div>
}
else
{
    <EditForm Model="@correlatividad" OnValidSubmit="@Actualizar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="materiaEnPlanEstudioId">Materia Plan ID:</label>
            <InputNumber id="materiaEnPlanEstudioId" @bind-Value="correlatividad.MateriaEnPlanEstudioId" class="form-control" />
            <ValidationMessage For="@(() => correlatividad.MateriaEnPlanEstudioId)" />
        </div>

        <div class="form-group">
            <label for="materiaCorrelativaId">Materia Correlativa ID:</label>
            <InputNumber id="materiaCorrelativaId" @bind-Value="correlatividad.MateriaCorrelativaId" class="form-control" />
            <ValidationMessage For="@(() => correlatividad.MateriaCorrelativaId)" />
        </div>

        <div class="form-group form-check">
            <InputCheckbox id="activo" @bind-Value="correlatividad.Activo" class="form-check-input" />
            <label for="activo" class="form-check-label">Activo</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Actualizar</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }

    private Correlatividad correlatividad = new();
    private bool cargando = true;
    private bool error = false;
    private string mensajeError = "";

    protected override async Task OnParametersSetAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        StateHasChanged();

        var respuesta = await CorrelatividadServicio.GetById("api/Correlatividades", Id);

        if (respuesta.Error)
        {
            error = true;
            mensajeError = await respuesta.ObtenerError();
        }
        else
        {
            correlatividad = respuesta.Respuesta ?? new Correlatividad();
        }

        cargando = false;
        StateHasChanged();
    }

    private async Task Actualizar()
    {
        var respuesta = await CorrelatividadServicio.Put("api/Correlatividades", correlatividad);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/correlatividades");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/correlatividades");
    }
}
