@page "/profesores/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject IProfesorServicio ProfesorServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
<h3>Crear Profesor</h3>

<EditForm Model="@nuevoProfesor" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="usuarioId">Usuario ID:</label>
        <InputNumber id="usuarioId" @bind-Value="nuevoProfesor.UsuarioId" class="form-control" />
        <ValidationMessage For="@(() => nuevoProfesor.UsuarioId)" />
    </div>

    <div class="form-group form-check">
        <InputCheckbox id="estado" @bind-Value="nuevoProfesor.Estado" class="form-check-input" />
        <label for="estado" class="form-check-label">Estado Activo</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@code {
    private Profesor nuevoProfesor = new() { Estado = true };

    private async Task Guardar()
    {
        var respuesta = await ProfesorServicio.Post("api/Profesores", nuevoProfesor);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/profesores");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/profesores");
    }
}
