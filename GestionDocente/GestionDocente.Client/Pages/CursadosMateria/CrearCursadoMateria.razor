@page "/cursadosmateria/crear"
@using GestionDocente.BD.Data.Entity
@using GestionDocente.Client.Servicios
@inject ICursadoMateriaServicio CursadoMateriaServicio
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
<h3>Crear Cursado de Materia</h3>

<EditForm Model="@nuevoCursado" OnValidSubmit="@Guardar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="alumnoId">Alumno ID:</label>
        <InputNumber id="alumnoId" @bind-Value="nuevoCursado.AlumnoId" class="form-control" />
        <ValidationMessage For="@(() => nuevoCursado.AlumnoId)" />
    </div>

    <div class="form-group">
        <label for="turnoId">Turno ID:</label>
        <InputNumber id="turnoId" @bind-Value="nuevoCursado.TurnoId" class="form-control" />
        <ValidationMessage For="@(() => nuevoCursado.TurnoId)" />
    </div>

    <div class="form-group">
        <label for="fechaInscripcion">Fecha Inscripción:</label>
        <InputDate id="fechaInscripcion" @bind-Value="nuevoCursado.FechaInscripcion" class="form-control" />
        <ValidationMessage For="@(() => nuevoCursado.FechaInscripcion)" />
    </div>

    <div class="form-group">
        <label for="anno">Año:</label>
        <InputNumber id="anno" @bind-Value="nuevoCursado.Anno" class="form-control" />
        <ValidationMessage For="@(() => nuevoCursado.Anno)" />
    </div>

    <div class="form-group">
        <label for="condicionActual">Condición Actual:</label>
        <InputText id="condicionActual" @bind-Value="nuevoCursado.CondicionActual" class="form-control" />
        <ValidationMessage For="@(() => nuevoCursado.CondicionActual)" />
    </div>

    <div class="form-group">
        <label for="vencimientoCondicion">Vencimiento Condición:</label>
        <InputDate id="vencimientoCondicion" @bind-Value="nuevoCursado.VencimientoCondicion" class="form-control" />
        <ValidationMessage For="@(() => nuevoCursado.VencimientoCondicion)" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
    </div>
</EditForm>

@code {
    private CursadoMateria nuevoCursado = new();

    private async Task Guardar()
    {
        var respuesta = await CursadoMateriaServicio.Post("api/CursadosMateria", nuevoCursado);

        if (respuesta.Error)
        {
            var error = await respuesta.ObtenerError();
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {error}");
        }
        else
        {
            Navigation.NavigateTo("/cursadosmateria");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/cursadosmateria");
    }
}